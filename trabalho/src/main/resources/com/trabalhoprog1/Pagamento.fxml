<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.trabalhoprog1.PagamentoController">
   <children>
      <Label text="RESUMO DO PEDIDO">
         <font><Font name="Arial Black" size="24.0" /></font>
      </Label>
      
      <ScrollPane fitToWidth="true" prefHeight="400.0" prefWidth="700.0">
         <content>
            <VBox fx:id="boxItens" spacing="10.0" style="-fx-padding: 10;" />
         </content>
      </ScrollPane>
      
      <Label fx:id="lblTotal" text="TOTAL: R$ 0,00" textFill="#e40e0e">
         <font><Font name="Arial Black" size="28.0" /></font>
      </Label>
      
      <Button mnemonicParsing="false" onAction="#confirmarPagamento" prefHeight="60.0" prefWidth="300.0" style="-fx-background-color: green; -fx-text-fill: white;" text="CONFIRMAR PAGAMENTO">
         <font><Font name="Arial Black" size="18.0" /></font>
      </Button>
      
      <Button mnemonicParsing="false" onAction="#voltar" text="Voltar para o Menu (Adicionar mais)" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>